/*place global styles here */
html, body { @apply h-full overflow-hidden; }

:root {
    --header-height: 6rem;
    --chess-light-tile-color: #dad9b5;
    --chess-dark-tile-color: #964d37;
}

.base-page-container {
    @apply min-h-[calc(100vh-var(--header-height))] container mx-auto px-4 py-[10vh];
}